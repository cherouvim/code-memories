SCREEN 13
PALETTE 1, 63
OUT &H3C8, 2
FOR X = 0 TO 250
Z = Z + 1
OUT &H3C9, Z
OUT &H3C9, Z
OUT &H3C9, 60 - Z
NEXT X
RANDOMIZE TIMER
FOR J = -10 TO 5
FOR X = -10 TO 20 STEP .1
FOR Y = -10 TO 10 STEP .1
FOR Z = 0 TO 10
XX! = XX! * X + X + SIN(Y) * J
YY! = YY! * Y + Y + COS(X) * J
IF XX! + YY! > 10000 THEN PSET (X * 10 + 100, Y * 10 + 100), (XX! + YY! - 1000) / 5000: EXIT FOR
NEXT Z
IF XX! + YY! < 10000 THEN PSET (X * 10 + 100, Y * 10 + 100), 1
XX! = 0: YY! = 0
NEXT Y
NEXT X
NEXT J

DO WHILE INKEY$ = "": LOOP

